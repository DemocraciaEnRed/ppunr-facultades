.thumbs
  background-color:#ffffff
  font-family: 'Roboto', sans-serif
  color: #696969
  position: relative
  overflow: hidden
  &.info-landing
    padding-bottom: 66px
    &::after
      content: ""
      position: absolute
      width: 100%
      left: 0
      bottom: 0
      box-shadow: 0 0 8px 1px #747474
  .row.cont
    //padding-top: 3rem;
  h2
    text-align: center
    font-size: 1.25rem
    text-transform: uppercase
    font-weight: 500
    color: #8c1e80
    margin: 20px 0 0
    font-family: 'Roboto', sans-serif
    a
      color: #3088bb
      &:hover
        color: #69b9e8
  p
    margin-bottom: 6%
    line-height: 1.5
    font-weight: 400
    padding: 0 33px
    font-size: 18px
    color: #464646
  .subtitulo
    margin: 10px auto 20px
    padding: 0 10%;
    text-align: center
    h2
      font-size: 1.6em
      text-transform: initial
      text-align: center
      color: #fff
      font-weight: 700
      margin:30 0 0
      @media(max-width: 460px)
        max-width:390px
        font-size: 1.2em
      &.thumbs
        min-height:1em !important

    h3
      font-size:1.2em
      font-weight: 300
      margin: 0 0 20px 0
      color: #fff
      @media(max-width: 465px)
        font-size:1em
    p
      font-size:1.2em
      font-weight: 300
      margin: 0 0 40px 0
      color: #fff
  .cont-boton-azul
    text-align: center
  .que-son
  .como-voto
  .donde-voto
  .que-propongo
  .como-sigo
    width: 200px
    height: 200px
    display: auto
    position: relative
    margin: 30px auto 0
    background-repeat: no-repeat
    background-position: center
    background-size: 186px

  .que-son-cont
    margin-left: 3.62%
  .que-propongo-cont
    a
      color: #1791be
      font-weight: 400
    a:hover
      color: rgb(140,30,129)
  .donde-voto-cont
    margin-right: 3.62%
    a
      display: block
      color: #1791be
      font-weight: 400
    a:hover
      color: rgb(140,30,129)
  .como-voto
    background-image: unquote("url('/ext/lib/site/thumbs-voto/voto6.svg')")
  .donde-voto
    background-image: unquote("url('/ext/lib/site/thumbs-voto/location3.svg')")

.violet-background
  width:100%
  height: 700px
  z-index:-100
  position:absolute
  background-color:#8c0375

.row.btn-container-home
  justify-content: center;
  .boton-mandar-idea
    border: none;
    width: 100%;
    background: transparent;
    border: 2px solid #fff;
    border-radius: 5px;
    color: #fff
    padding: 13px 30px
    display: inline-block
    margin-top: 10px
    margin-bottom: 10px;
    &:hover
      cursor: pointer;
      color: #9c3b6e;
      border-color: #fff;
      background-color: #fff

