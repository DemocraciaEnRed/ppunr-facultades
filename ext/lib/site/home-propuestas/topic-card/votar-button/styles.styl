.votar-button-wrapper
  float: left;
  margin-bottom: 15px;
  .btn
    background: #bf4588
    margin: 0
    border-radius: 5px;
    font-weight: 600
    font-size: 14px
    text-transform: uppercase;
    border: solid 1px #bf4588;
    &.btn-empty
      background: #FFFFFF
      color: #bf4588
      border: solid 2px #bf4588;
    &.btn-filled
      margin: 10px;
      width: auto
      border-radius: 32px;
      padding: 8px 20px;
      font-weight: 700;
      border: 2px solid #8C0375;
      background: #8C0375
      color: #FFF;
      &:hover
        background: transparent
        color: #8C0375
        border: 2px solid #8C0375;
        text-decoration: none;

    &.btn-voted
      margin: 10px;
      width: auto
      border-radius: 32px;
      padding: 8px 20px;
      font-weight: 700;
      border: 2px solid #8C0375;
      background: #8C0375
      color: #FFF;
      border-color: transparent
      box-shadow:none
      &:hover
        cursor: default;


  .confirmas-voto
    color: #bf4588
    font-weight: bold
    margin-right: 9px;

  .btn-si
    margin-right: 10px;
