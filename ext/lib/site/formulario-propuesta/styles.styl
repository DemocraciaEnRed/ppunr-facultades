@import '../../../../node_modules/tags-input/tags-input.css'
@import '../../../../lib/admin/admin-topics-form/tag-autocomplete/styles'


.form-propuesta
  display: flex
  flex-direction: column
  align-items: center
  @media (max-width: 400px)
    margin-top: 140px
  .propuesta-header
    color: white
    // text-shadow: 0 1px 3px #333
    display: flex
    align-items: center
    flex-direction: column
    justify-content: center
    min-height: 250px
    width: 100%
    padding: 0 20px
    text-align: center
    background-size: cover
    background-image: unquote("url('ext/lib/site/formulario-propuesta/fondo-formulario-propuestas.png')")
    background-repeat: no-repeat
    background-position: center;
    h1
      font-size: 32px
      margin:0;
      background-color: #990070;
      padding: 10px 20px;
      @media screen and (min-width: 764px)
        font-size: 32px
    p
      font-size: 16px
      margin:0;
      padding: 4px 30px;
      // margin-top:6px;
      // background-color: rgba(23,145,190,0.6)
      background-color: #0396a6
      @media screen and (min-width: 764px)
        font-size: 20px

  .wrapper
    max-width:900px
    width: 100%
    padding: 20px
    position: relative
    .more-info
      text-align: center;
      font-size: 1.3em;
      margin-top: 10px;
    .bar-section
      padding: 2rem 1rem;
      text-align: center
      &.acerca-propuesta
        margin-top: 50px;
      p
        margin: 0
        color: #000
        text-align: center;
        line-height: normal;
      .section-title
        font-size: 30px
        font-weight: bold
        color: #000
      .section-subtitle
        color: #484747
        font-size: 16px
        text-align: center
      .section-intro
        background-color: #8c1e80
        font-size: 16px
        color: white
        padding: 4px 20px
        display: inline-block
        margin-bottom: 25px
    .required
      color: #000
    label
      // color: rgba(0, 0, 0, 0.55)
      margin: 10px 0 15px;
      font-size: 25px;
      font-weight: bold;

    input
      width:100%
    .tags-input
      border-radius: 5px
      border: 1px solid #CACACA
      padding: 3px 10px
      width: 100%

    input, select
      border-radius: 0px
      border: 1px solid #000
      //border-bottom: 2px solid #CACACA
      font-size: 1rem
      height: 3rem;
      color: #000
      &:focus
        box-shadow: none;
        // border-color: #1791be
        border: 1px solid #1791be
        border-bottom: 2px solid #000
    textarea
      border-radius: 0px
      border: 1px solid #000
      //border-bottom: 2px solid #CACACA
      font-size: 1rem
      color: #000
      &:focus
        box-shadow: none;
        // border-color: #1791be
        border: 1px solid #1791be
        border-bottom: 2px solid #000
    .submit-div
      text-align: center
      .submit-btn
        color: #8c1e80
        font-weight: 800
        border: 2px solid #8c1e80
        background-color: #FFF;
        border-radius: 5px
        padding: 12px 60px
        font-weight: 800;
        font-size: 21px
        cursor: pointer
        &:hover
          background-color: #8c1e80;
          color: #FFF
    .form-section-label
      color: #9e41b9
      font-size: 18px
      font-weight: bold
      @media screen and (min-width: 1360px)
        position: relative
        left: -240px
        margin-top: 10px
        top: 30px

  select.special-height
    height: 3rem !important;

  ul.tags
    list-style: none;
    margin: 20px 0;
    overflow: hidden;
    padding: 0;
  ul.tags li
    float: left;
  .tag
    background: #eee;
    border-radius: 8px;
    color: #000;
    display: inline-block;
    line-height: 25px;
    padding: 5px 11px;
    position: relative;
    margin: 0 10px 10px 0;
    &:hover
      cursor: pointer;

  .add-color
    color: #8c1e80;
  .help-text
    display: block
    font-size: 16px
    color: #000
    margin: 0 0 .3em
    &.requerido
      font-size: .7em
      font-style: italic
      color: #828282

  .span-alert
    color: #9e41b9
    font-size:.8em
    @media screen and (min-width: 1360px)
        position: relative
        // left: -240px
        margin-top: 10px
        top: 30px
  .cronograma-alert
    padding-top:10px

  .cronograma
    tex-align:right
    margin-top: 40px

  .error-box
    border: 2px solid red;
    border-radius: 10px
    padding: 15px;
    margin-bottom: 10px
    ul
      margin-bottom: 0
    li.error-li
      color: red;

.album-image-list-container
  position: relative
  .album-image-delete-pic
    position: absolute
    top: 0px
    right: 0px