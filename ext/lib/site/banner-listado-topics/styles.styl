header.banner-proyectos
  width: 100%
  height: auto;
  padding: 110px 0px 60px;
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: center
  align-items: center
  background: linear-gradient(90deg, rgba(140,3,117,1) 0%, rgba(140,3,117,1) 35%, rgba(191,69,136,1) 100%);
  background-image: url(/ext/lib/site/home-propuestas/innovacion.jpg);
  background-size: cover;
  background-position: bottom
  text-align: center
  color: #FFF
  button.iniciar-votacion
    position: absolute;
    width: 307px;
    height: 55px;

    background: #BF4588;
    border-radius: 5px;

  .proyectos-title
    font-family: 'Roboto', sans-serif
    font-size: 40px
    @media screen and (max-width: 570px)
      font-size: 25px
    font-weight: 600
    margin: 0

  .proyectos-subtitle
    font-family: 'Roboto', sans-serif
    font-size: 24px
    @media screen and (max-width: 570px)
          font-size: 18px
          margin: 20px 5 5 0
    font-weight: 300
    letter-spacing: 0.4px
    max-width: 1042px
    margin: 20px 0 0 0

  a.proyectos-button
    color: #4b3c59;
    text-align: center;
    margin-top: 30px;
    box-shadow: 0 4px 4px 0 rgba(0, 0, 0, 0.25);
    padding: 10px 20px;
    background-color: #802983;
    color: #fff;
    &:hover,&:focus
      background-color: #fff;
      color: #802983;

header.banner-votos
  width: 100%
  height: auto;
  padding: 20px 0px 20px;
  display: flex
  flex-wrap: wrap
  flex-direction: column
  justify-content: center
  align-items: center
  background-color: #6e025c
  background-position: bottom
  text-align: center
  color: #FFF
  z-index: 999

  .votos-title
    font-family: 'Roboto', sans-serif
    font-size: 30px
    @media screen and (max-width: 250px)
      font-size: 25px
    font-weight: 300
    margin: 0