#tags-wrapper
  .well.well-lg.clearfix
    .col-xs-12.col-md-2
      a.btn.btn-success.btn-block.new(href=urlBuilder.for('admin.tags.create', {forum: forum.name}))
        span.glyphicon.glyphicon-plus
        = ' ' + t('admin-tags.list.add-tag')
    .col-xs-12.col-md-7.col-md-offset-3
      .input-group.input-group-md
        span.input-group-addon
          i.glyphicon.glyphicon-search
        input.form-control.search(type='text', maxlength='50' placeholder='#{t("admin-tags.list.search.placeholder")}', autofocus)
    .col-md-3
  .list.list-group
    - each tag in tags
      a.list-group-item(href=urlBuilder.for('admin.tags.id', {id: tag.id, forum: forum.name}))
        div(style='background-color: ' + tag.color + ';border-radius: 50px; display: inline-block; width: 15px; height: 15px; margin-right: 10px;')
        span.tag-title= tag.name
        - if (tag.enabled)
          span.label.label-success.pull-right
            span.glyphicon.glyphicon-ok
            = ' Habilitado'
        - else
          span.label.label-danger.pull-right
            span.glyphicon.glyphicon-remove
            = ' Deshabilitado'
