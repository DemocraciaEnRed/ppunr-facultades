#topics-wrapper
  .topics-admin
    .password-settings
      .heading
        h2= 'Configuraciones'
        //button.btn.btn-primary#borrar-proyectistas='borrar proyectistas'
      form.form(action=form.action, method='post', role='form', autovalidate, autosubmit)
        ul.form-messages
        .container-fluid  
          .row
            .col-sm-6    
              h5= ''
              .form-group
                label.switch= 'Mostrar sección eventos'
                  span.help-text= " Durante la etapa de subida de ideas se denomina “Foro presencial” y durante la etapa de votación “Votación presencial”"
                  input.form(
                    type='checkbox',
                    data-name='mostrarSeccionEventos',
                    id='checkboxPoints'
                  )
                  .slider.round
              .form-group.openProposal
                label= 'Titulo sección propuestas'
                input.form-control.form(
                  type='text',
                  data-name='noticeTexto'
                )
              .form-group
                label.switch= 'Mostrar formulario proyectistas'
                  input.form(
                    type='checkbox',
                    data-name='mostrarFormulariosProyectistas',
                    id='checkboxPoints'
                  )
                  .slider.round
              //.form-group
                label.switch= 'Mostrar seccion eventos'
                  input.form(
                    type='checkbox',
                    data-name='mostrarInfoEncuentros',
                    data-type='descubrible',
                    data-link='linkMetting',
                    id='checkboxMeeting',
                  )
                  .slider.round
              //.form-group.linkMetting
                label= 'Link de formulario para encuentros'
                input.form-control.form(
                  type='text',
                  data-name='linkFormEncuentro',
                  data-type='ocultable',
                  validate='url',
                )
                
            .col-sm-6
              h5="Estados de la plataforma"
              .form-group
                label.switch= 'Estado de subida de ideas'
                  input.form(
                    type='checkbox',
                    data-name='propuestasAbiertas',
                    id='checkboxProp'
                  )
                  .slider.round
              .form-group.state-votation.row
                .col-sm-4
                  label= 'Pre ideación'
                    input.form.pseudo-radio(
                      type='checkbox',
                      data-name="seguimientoNormal",
                      id='preIde',
                    )
                .col-sm-4.last
                  label= 'Ideación'
                    input.form.pseudo-radio(
                      type='checkbox',
                      data-name="ideacion",
                      id='ide',
                    )  
                .col-sm-4
                  label= 'Pre y post votación'
                    input.form.pseudo-radio(
                      type='checkbox',
                      data-name="preVotacion",
                      id='prePostVot',
                    )  
                .col-sm-4.last
                  label= 'Votación'
                    input.form.pseudo-radio(
                      type='checkbox',
                      data-name="votacion",
                      id='Vot',
                    )
              //.form-group.hiden
                label= 'Filtros de años'
                input.form-control.form(
                  type='text',
                  data-name='filterYear',
                )
              //.form-group
                label= 'Filtros de años'
                .combobox
                  .comboboxChips
                    input.form-control.form(
                     type='number',
                     max='9999'
                      )
              //.form-group
                label.switch= 'Mostrar link de votación'
                  input.form(
                    type='checkbox',
                    data-name='mostrarLinkVotaciones',
                    data-type='descubrible',
                    data-link='linkVotation',
                    id='checkboxVot',
                  )
                  .slider.round
              //.form-group.linkVotation.hiden
                label= 'Link para votaciones'
                input.form-control.form(
                  type='text',
                  data-name='linkVotaciones',
                  validate='url',
                )
          .row  
            .col-sm-6
              
        .form-group: button.btn.btn-success.btn-block.btn-lg= t('settings.save')
