#topics-wrapper
  .topics-admin
    .password-settings
      .heading
        .circle
          i.icon-lock
         h2= 'Padron'
        h3= 'Buscar por DNI'
        .form-group
          label= 'Busque por DNI nuevo'
          input.form-control(
            type='text',
            data-name='busqueda-dni',
            validate='required'
          )
        .form-group
          button.btn.btn-primary.buscar-dni-button= 'Buscar'
        pre#response-dni='Ingrese un DNI para buscar su informacion'
        h4= 'Referencia Claustros'
        pre
          - each claustro in claustros
            div ID: #{claustro.value} - Claustro #{claustro.name}
        h4= 'Referencia Facultades'
        pre
          - each facultad in facultades
            div ID: #{facultad.value} - Facultad #{facultad.name}
        hr
        h3= 'Agregar al padron'
        .form-group
          label= 'Ingrese el DNI nuevo'
          input.form-control(
            type='text',
            data-name='new-dni',
            validate='required'
          )
        //- .form-group
        //-   label= 'Elija la escuela'
        //-   select.form-control(data-name='new-escuela', validate='required')
        //-     option(selected, disabled, value="")='- Elija una escuela -'
        //-     - each escuela in escuelas
        //-       option(value=escuela.value)
        //-         = escuela.name
        .form-group
          button.btn.btn-primary.new-padron-button= 'Ingresar al padrón'
        #success-new-dni.alert.alert-success(hidden=true)='Exito! Agregado al padron'        
        #error-new-dni.alert.alert-danger(hidden=true)='Exito! Agregado al padron'        
        hr
        h2= 'Contenido Portada'
      form.form(action='/api/text', method='post', role='form', autocomplete='off', autovalidate='autovalidate', autosubmit='autosubmit')
        ul.form-messages

        h5= 'Títulos'
        .form-group
          label= 'Subtitulo principal'
          input.form-control(
            type='text',
            data-name='home-subtitle',
            maxlength=100,
            validate='required'
          )
        .form-group
          label= 'Texto subtitulo principal'
          textarea.form-control(
            data-name='home-subtitle-text',
            rows=5,
            maxlength=400,
            validate='required'
          )

        h5= 'Videos de fondo'
        .form-group
          span.help-text= 'Cuando un usuario entra a la página se le muestra aleatoriamente uno de los dos posibles videos.'
          span.help-text= 'El formato .webm es para celulares y el .mp4 para dispositivos más grandes.'
        .form-group
          label= 'Video (posibilidad 1)'
          h6= 'Formato mp4:'
          input.form-control(
            type='text',
            data-name='home-video1-mp4',
            maxlength=200,
            validate='required url'
          )
          h6= 'Formato webm:'
          input.form-control(
            type='text',
            data-name='home-video1-webm',
            maxlength=200,
            validate='required url'
          )
        .form-group
          label= 'Video (posibilidad 2)'
          h6= 'Formato mp4:'
          input.form-control(
            type='text',
            data-name='home-video2-mp4',
            maxlength=200,
            validate='url'
          )
          h6= 'Formato webm:'
          input.form-control(
            type='text',
            data-name='home-video2-webm',
            maxlength=200,
            validate='url'
          )

        h5= 'Íconos explicativos'
        span.help-text= 'Las imágenes se acomodan a un tamaño de 200 x 200 píxeles'
        .form-group
          label= 'Ícono 1'
          h6= 'Imagen:'
          input.form-control(
            type='text',
            data-name='home-icono1-imagen',
            maxlength=200,
            validate='required url'
          )
          h6= 'Título:'
          input.form-control(
            type='text',
            data-name='home-icono1-titulo',
            maxlength=200,
            validate='required'
          )
          h6= 'Texto:'
          textarea.form-control(
            data-name='home-icono1-texto',
            rows=5,
            maxlength=800,
            validate='required'
          )
        .form-group
          label= 'Ícono 2'
          h6= 'Imagen:'
          input.form-control(
            type='text',
            data-name='home-icono2-imagen',
            maxlength=200,
            validate='required url'
          )
          h6= 'Título:'
          input.form-control(
            type='text',
            data-name='home-icono2-titulo',
            maxlength=200,
            validate='required'
          )
          h6= 'Texto:'
          textarea.form-control(
            data-name='home-icono2-texto',
            rows=5,
            maxlength=800,
            validate='required'
          )
        .form-group
          label= 'Ícono 3'
          h6= 'Imagen:'
          input.form-control(
            type='text',
            data-name='home-icono3-imagen',
            maxlength=200,
            validate='required url'
          )
          h6= 'Título:'
          input.form-control(
            type='text',
            data-name='home-icono3-titulo',
            maxlength=200,
            validate='required'
          )
          h6= 'Texto:'
          textarea.form-control(
            data-name='home-icono3-texto',
            rows=5,
            maxlength=800,
            validate='required'
          )
        .form-group: button.btn.btn-success.btn-block.btn-lg= t('settings.save')
