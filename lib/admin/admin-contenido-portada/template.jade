#topics-wrapper
  .topics-admin
    .password-settings
      .heading
        h2= 'Contenido Portada'
      form.form(action='/api/text', method='post', role='form', autocomplete='off', autovalidate='autovalidate', autosubmit='autosubmit')
        ul.form-messages
        .panelExpandible
          h3.titleShow= 'Contenido Portada'
            span.glyphicon.glyphicon-menu-down.pull-right
          .showHiden.hiden
            .contentHiden
              h5= 'Títulos'
              .form-group
                label= 'nombre de portada de inicio'
                input.form-control(
                  type='text',
                  data-name='home-nombre',
                  maxlength=100,
                  validate='required'
                )
              .form-group
                label= 'Subtitulo principal'
                input.form-control(
                  type='text',
                  data-name='home-subtitle',
                  maxlength=100,
                  validate='required'
                )
              .form-group
                label= 'Texto subtitulo principal'
                textarea.form-control(
                  data-name='home-subtitle-text',
                  rows=5,
                  maxlength=400,
                  validate='required'
                )

              h5= 'Videos de fondo'
              .form-group
                span.help-text= 'Cuando un usuario entra a la página se le muestra aleatoriamente uno de los dos posibles videos.'
                span.help-text= 'El formato .webm es para celulares y el .mp4 para dispositivos más grandes.'
              .form-group
                label= 'Video (posibilidad 1)'
                h6= 'Formato mp4:'
                input.form-control(
                  type='text',
                  data-name='home-video1-mp4',
                  maxlength=200,
                  validate='required url'
                )
                h6= 'Formato webm:'
                input.form-control(
                  type='text',
                  data-name='home-video1-webm',
                  maxlength=200,
                  validate='required url'
                )
              .form-group
                label= 'Video (posibilidad 2)'
                h6= 'Formato mp4:'
                input.form-control(
                  type='text',
                  data-name='home-video2-mp4',
                  maxlength=200,
                  validate='url'
                )
                h6= 'Formato webm:'
                input.form-control(
                  type='text',
                  data-name='home-video2-webm',
                  maxlength=200,
                  validate='url'
                )

              h5= 'Íconos explicativos'
              span.help-text= 'Las imágenes se acomodan a un tamaño de 200 x 200 píxeles'
              .form-group
                label= 'Ícono 1'
                h6= 'Imagen:'
                input.form-control(
                  type='text',
                  data-name='home-icono1-imagen',
                  maxlength=200,
                  validate='required url'
                )
                h6= 'Título:'
                input.form-control(
                  type='text',
                  data-name='home-icono1-titulo',
                  maxlength=200,
                  validate='required'
                )
                h6= 'Texto:'
                textarea.form-control(
                  data-name='home-icono1-texto',
                  rows=5,
                  maxlength=800,
                  validate='required'
                )
              .form-group
                label= 'Ícono 2'
                h6= 'Imagen:'
                input.form-control(
                  type='text',
                  data-name='home-icono2-imagen',
                  maxlength=200,
                  validate='required url'
                )
                h6= 'Título:'
                input.form-control(
                  type='text',
                  data-name='home-icono2-titulo',
                  maxlength=200,
                  validate='required'
                )
                h6= 'Texto:'
                textarea.form-control(
                  data-name='home-icono2-texto',
                  rows=5,
                  maxlength=800,
                  validate='required'
                )
              .form-group
                label= 'Ícono 3'
                h6= 'Imagen:'
                input.form-control(
                  type='text',
                  data-name='home-icono3-imagen',
                  maxlength=200,
                  validate='required url'
                )
                h6= 'Título:'
                input.form-control(
                  type='text',
                  data-name='home-icono3-titulo',
                  maxlength=200,
                  validate='required'
                )
                h6= 'Texto:'
                textarea.form-control(
                  data-name='home-icono3-texto',
                  rows=5,
                  maxlength=800,
                  validate='required'
                )
        .panelExpandible
          h3.titleShow= 'Foro'
            span.glyphicon.glyphicon-menu-down.pull-right
          .showHiden.hiden
            .contentHiden
              .form-group
                label= 'Titulo'
                input.form-control(
                  type='text',
                  data-name='foro-titulo',
                  maxlength=200,
                  validate='required'
                )
              .form-group
                label= 'Bajo banner'
                input.form-control(
                  type='text',
                  data-name='foro-bajada',
                  maxlength=200,
                  validate='required'
                )
              .form-group
                label= 'Nombre de la pestaña'
                input.form-control(
                  type='text',
                  data-name='foro-pestaña',
                  maxlength=200,
                  validate='required'
                )
        .panelExpandible
          h3.titleShow= 'Eventos'
            span.glyphicon.glyphicon-menu-down.pull-right
          .showHiden.hiden
            .contentHiden
              .form-group
                label= 'Titulo'

                input.form-control(
                  type='text',
                  data-name='evento-titulo',
                  maxlength=200,
                  validate='required'
                )
              .form-group
                label= 'Bajo banner'
                input.form-control(
                  type='text',
                  data-name='evento-bajada',
                  maxlength=200,
                  validate='required'
                )
              .form-group
                label= 'Nombre de la pestaña'
                input.form-control(
                  type='text',
                  data-name='evento-pestaña',
                  maxlength=200,
                  validate='required'
                )
        .panelExpandible
          h3.titleShow= 'Información'
            span.glyphicon.glyphicon-menu-down.pull-right
          .showHiden.hiden
            .contentHiden

              .form-group
                label= 'Bajo banner'
                input.form-control(
                  type='text',
                  data-name='info-bajada',
                  maxlength=200,
                  validate='required'
                )
              .form-group
                label= 'Sobre preguntas'
                input.textArea.form-control(
                  type='text',
                  data-name='info-reglamento',
                  maxlength=400,
                  validate='required'
                )
        .panelExpandible
          h3.titleShow= 'Footer'
            span.glyphicon.glyphicon-menu-down.pull-right
          .showHiden.hiden
            .contentHiden
              .form-group
                label= 'link de reglamento en el footer'
                input.form-control(
                  type='text',
                  data-name='reglamento-link',
                  maxlength=200,
                  validate='required url'
                )
        .form-group: button.btn.btn-success.btn-block.btn-lg.button-save= t('settings.save')
